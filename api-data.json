{
  "data": {
    "stages": [
      {
        "title": "Personal information",
        "tabTitle": "Stage 1",
        "description": "Matic would like to give you the best product. This survey will take few seconds.",
        "messages": [
          {
            "name": "name",
            "message": "My name is ____",
            "input": {
              "type": "text",
              "minlength": 3,
              "maxlength": 3,
              "required": true
            }
          },
          {
            "name": "email",
            "message": "I’m using ____ email",
            "input": {
              "type": "email",
              "required": true
            }
          },
          {
            "name": "phone",
            "message": "And my phone number is ____",
            "input": {
              "type": "text",
              "pattern": "^\\(?([0-9]{3})\\)?[-.●]?([0-9]{3})[-.●]?([0-9]{4})$",
              "required": false
            }
          }
        ]
      },
      {
        "title": " Address",
        "tabTitle": "Stage 2",
        "description": "We need your address to confirm our best offer",
        "messages": [
          {
            "name": "country",
            "message": "I live in ____",
            "input": {
              "type": "select",
              "format": "country",
              "required": true
            }
          },
          {
            "name": "zip",
            "message": "My zip code is ____",
            "input": {
              "type": "number",
              "filter": "zip",
              "required": true
            }
          }
        ]
      },
      {
        "title": "General Information",
        "tabTitle": "Stage 3",
        "description": "These answers provides deeper insights to craft something special",
        "messages": [
          {
            "name": "income",
            "message": "My family makes $____ per year",
            "input": {
              "type": "number",
              "min": 0,
              "required": true
            }
          },
          {
            "name": "familyMembers",
            "message": "There is ____ person in my tax household",
            "input": {
              "type": "select",
              "format": "number",
              "from": 1,
              "to": 10,
              "required": true
            }
          }
        ]
      }
    ],
    "finishMessage": "Thanks for your answers. We will get back to you within 24 hours with our amazing product"
  }

}




